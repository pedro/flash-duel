#!/usr/bin/env ruby

$: << File.dirname(__FILE__) + "/../lib/flash_duel"

require "engine"
require "board"
require "bot"

include FlashDuel

def load_player(fname)
  name = File.basename(fname).gsub(/\..*/, '')
  Engine.load_player File.read(fname), name
end

game = Engine.new(load_player(ARGV.shift), load_player(ARGV.shift))
game.run
puts "AND TEH WINNER IS: #{game.winner}"