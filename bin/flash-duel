#!/usr/bin/env ruby

$: << File.dirname(__FILE__) + "/../lib/flash_duel"

require "engine"
require "board"
require "bot"

include FlashDuel

p1 = Engine.load_player File.read(ARGV.shift)
p2 = Engine.load_player File.read(ARGV.shift)

game = Engine.new(p1, p2)
game.run
puts "AND TEH WINNER IS: #{game.winner}"